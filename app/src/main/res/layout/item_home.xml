<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    tools:context=".HomeFragment"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            >

            <ImageView
                android:id="@+id/itemHomeProfilePicture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile" />
            <TextView
                android:id="@+id/itemHomeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/itemHomeProfilePicture"
                android:translationY="10dp"
                android:fontFamily="@font/hind_guntur_semibold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="NAME NAME NAME"/>
            <Button
                android:id="@+id/itemHomeLike"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:text="â™¡"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:translationX="-18dp" />


        </RelativeLayout>

        <ImageView

            android:id="@+id/itemHomeEventPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>